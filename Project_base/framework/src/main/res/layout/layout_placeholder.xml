<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_or_margin_12dp">

        <ImageView
            android:layout_width="@dimen/wight_80dp"
            android:layout_height="@dimen/height_80dp"
            android:layout_marginRight="@dimen/padding_or_margin_12dp"
            android:background="@color/unable_background_color"
            tools:ignore="ContentDescription" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_or_margin_8dp"
                android:background="@color/unable_background_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/unable_background_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_or_margin_12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_or_margin_12dp"
            android:background="@color/unable_background_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100dp"
            android:layout_marginBottom="@dimen/padding_or_margin_15dp"
            android:background="@color/unable_background_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100dp"
            android:layout_marginBottom="@dimen/padding_or_margin_15dp"
            android:background="@color/unable_background_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100dp"
            android:layout_marginBottom="@dimen/padding_or_margin_15dp"
            android:background="@color/unable_background_color" />

    </LinearLayout>

</LinearLayout>